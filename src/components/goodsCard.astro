---
const { href, title, body, thumbnail, state, text } = Astro.props;
import "../style/style.scss";
---

<article class="article">
  <a href={href}>
    <img src=`/images/${thumbnail}` alt={title} />
    <h2>{title}</h2>
    <p class="price">{body}</p>
    <p class="state">{state}</p>
    <p class="text">{text}</p>
  </a>
</article>
